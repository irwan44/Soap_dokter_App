<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:indeterminate="true"
    android:background="#F2F1F6">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/round_corners4"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/gif2"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="139dp"
                        android:layout_margin="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F9F9F9"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:onClick="medical"
                            android:background="@drawable/ripple"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="64dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="150dp"
                            android:src="@drawable/medicalrecord" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/bariol_bold"
                            android:layout_marginBottom="30dp"
                            android:layout_marginRight="150dp"
                            android:gravity="center"
                            android:textColor="@color/colorfont"
                            android:text="Medical Record" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:textColor="@color/colorfont"
                            android:fontFamily="@font/bariol_regular"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="150dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="Menunjukkan Data \nMedical Record Pasien" />



                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="139dp"
                            android:layout_margin="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F9F9F9"
                            app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:clickable="true"
                                android:onClick="antrian"
                                android:background="@drawable/ripple"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="64dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/queue" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/bariol_bold"
                                android:layout_marginBottom="30dp"
                                android:gravity="center"
                                android:text="Antrian Pasien" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/bariol_regular"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:text="Menunjukan data \nAntrian pasien Dokter" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="139dp"
                        android:layout_margin="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F9F9F9"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:onClick="soap"
                            android:background="@drawable/ripple"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="150dp"
                            android:src="@drawable/stethoscope_svgrepo_com__1_" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/bariol_bold"
                            android:layout_marginBottom="30dp"
                            android:textColor="@color/colorfont"
                            android:layout_marginRight="150dp"
                            android:gravity="center"
                            android:text="SOAP" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="150dp"
                            android:textColor="@color/colorfont"
                            android:fontFamily="@font/bariol_regular"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="Menunjukkan Data \nMedical Record Pasien" />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="139dp"
                            android:layout_margin="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F9F9F9"
                            app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:clickable="true"
                                android:onClick="pendapatan"
                                android:background="@drawable/ripple"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/profits_svgrepo_com" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/bariol_bold"
                                android:layout_marginBottom="30dp"
                                android:gravity="center"
                                android:text="Pendapatan" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/bariol_regular"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:text="Menunjukkan Data \nMedical Record Pasien" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>