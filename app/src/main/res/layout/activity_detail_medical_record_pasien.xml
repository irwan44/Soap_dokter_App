<?xml version="1.0" encoding="utf-8"?>
    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#F2F1F6"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:background="@drawable/bgblue"
                android:orientation="vertical">


                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/transparan"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/bariol_bold"
                                android:gravity="center"
                                android:text="Medical Record"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.Toolbar
                                android:id="@+id/toolbar"
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="37dp"
                                android:onClick="back"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:navigationIcon="@drawable/arrow_left_circle" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPasien"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile22"
                android:translationY="-65dp"
                android:translationX="150dp"
                app:civ_circle_background_color="@android:color/white">

            </de.hdodenhof.circleimageview.CircleImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:translationY="-55dp"
            android:background="@drawable/round_corners2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingVertical="5dp"
                android:text="Data Pasien"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bariol_bold"
                android:layout_marginBottom="20dp"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:translationY="-60dp"
            android:background="@drawable/ic_background_accent_rounded_ijo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/ic_background_accent_rounded_ijo"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorfont"
                        android:text="No MR"
                        android:fontFamily="@font/bariol_bold"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtStok"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/transparan"
                        android:hint=".."
                        android:fontFamily="@font/bariol_bold"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/primaryColor"
                        android:textSize="14sp"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/ic_background_accent_rounded_ijo"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorfont"
                        android:text="Sex"
                        android:fontFamily="@font/bariol_bold"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/transparan"
                        android:hint=".."
                        android:fontFamily="@font/bariol_bold"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/primaryColor"
                        android:textSize="14sp"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/ic_background_accent_rounded_ijo"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorfont"
                        android:text="Umur"
                        android:fontFamily="@font/bariol_bold"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/transparan"
                        android:hint=".."
                        android:fontFamily="@font/bariol_bold"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/primaryColor"
                        android:textSize="14sp"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/ic_background_accent_rounded_ijo"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorfont"
                        android:text="Gol. Darah"
                        android:fontFamily="@font/bariol_bold"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/transparan"
                        android:hint=".."
                        android:fontFamily="@font/bariol_bold"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/primaryColor"
                        android:textSize="14sp"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/ic_background_accent_rounded_ijo"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorfont"
                        android:text="Alergi"
                        android:fontFamily="@font/bariol_bold"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/transparan"
                        android:hint=".."
                        android:fontFamily="@font/bariol_bold"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/primaryColor"
                        android:textSize="14sp"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/ic_background_accent_rounded_ijo"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorfont"
                        android:text="Alamat"
                        android:fontFamily="@font/bariol_bold"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/transparan"
                        android:hint=".."
                        android:fontFamily="@font/bariol_bold"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/primaryColor"
                        android:textSize="14sp"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:translationY="-75dp"
            android:background="@drawable/round_corners2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bariol_bold"
                android:text="Data History Pasien"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/ic_background_accent_rounded_ijo"
                android:translationY="-85dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRiwayatPasien"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:drawablePadding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_circle_white"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:shadowColor="@color/purple_500"
                    android:outlineAmbientShadowColor="@color/purple_500"
                    android:drawableTop="@drawable/history"
                    android:paddingBottom="20dp"
                    android:text="Riwayat\nPengobatan\nPasien"
                    android:textColor="@color/purple_500"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLabPasien"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:drawablePadding="7dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_circle_white"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:drawableTop="@drawable/history"
                    android:paddingBottom="20dp"
                    android:text="Riwayat\nLaboratorium\nPasien"
                    android:textColor="@color/purple_500"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRadPasien"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:drawablePadding="7dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_circle_white"
                    android:gravity="center"
                    android:paddingHorizontal="5dp"
                    android:drawableTop="@drawable/history"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    android:text="Riwayat\nRadiologi\nPasien"
                    android:textColor="@color/purple_500"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:onClick="gosoap"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/ic_background_accent_rounded_blue"
                android:layout_marginBottom="10dp"
                android:translationY="-70dp"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                android:paddingHorizontal="10dp"
                android:text="Lanjut Ke SOAP"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>