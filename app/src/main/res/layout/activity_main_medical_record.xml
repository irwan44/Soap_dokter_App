<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F1F6"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainMedicalRecord">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bgblue"
                android:layout_height="match_parent">


                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/transparan"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bariol_bold"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"
                                android:text="Medical Record"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <androidx.appcompat.widget.Toolbar
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="37dp"
                                android:onClick="back1"
                                app:navigationIcon="@drawable/arrow_left_circle"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/border_white_1"
                    android:fontFamily="@font/bariol_bold"
                    android:textColor="@color/colorfont">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:clickable="true"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/ripple2"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="60dp"
                        android:text="Search Medical Record ...."/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_gravity="top"
                        android:onClick="backsoap1"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/bariol_bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/colorfont">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:onClick="selesai"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/bg24"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/bariol_bold"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Selesai"
                                android:textColor="@color/white"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/bariol_bold"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_gravity="top"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/bariol_bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/colorfont">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:onClick="pending"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/bg24"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/bariol_bold"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Panding"
                                android:textColor="@color/white"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/bariol_bold"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_gravity="top"
                        android:fontFamily="@font/bariol_bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/colorfont">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/bg24"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/bariol_bold"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pasien MR"
                                android:textColor="@color/white"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/bariol_bold"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutItem"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple"
                    android:clickable="true"
                    android:onClick="medical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="50dp"
                        android:fontFamily="@font/bariol_bold"
                        android:text="Tanggal :"
                        android:textColor="@color/colorfont"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/bariol_bold"
                        android:text="12-12-2022"
                        android:textColor="@color/colorfont"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="70dp"
                        android:fontFamily="@font/bariol_bold"
                        android:text="Jam :"
                        android:textColor="@color/colorfont"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/bariol_bold"
                        android:text="08 : 30 - 12 : 00"
                        android:textColor="@color/colorfont"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        android:layout_height="223dp"
                        android:clickable="true"
                        android:onClick="medical"
                        android:orientation="vertical"
                        android:translationY="-70dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgPasien"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginVertical="5dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/profile22" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:fontFamily="@font/bariol_bold"
                                android:text="No. Antrian" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/bariol_bold"
                                android:gravity="center"
                                android:text="20"
                                android:textSize="20dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="166dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:translationX="-15dp"
                            android:translationY="-130dp">

                            <LinearLayout
                                android:layout_width="166dp"
                                android:layout_height="149dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/nomr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bariol_bold"
                                    android:text="Nomor Medical Record :"
                                    android:textColor="@color/colorfont"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txnomr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/bariol_bold"
                                    android:text="00000101"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/namepasien"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/bariol_bold"
                                    android:maxLines="1"
                                    android:text="Nama Pasient :"
                                    android:textColor="@color/colorfont" />

                                <TextView
                                    android:id="@+id/txNamaPasien"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/bariol_bold"
                                    android:maxLines="1"
                                    android:text="ARISSA BUDIARTI, NY." />

                                <TextView
                                    android:id="@+id/nmaklinik"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/bariol_bold"
                                    android:maxLines="1"
                                    android:text="Klinik :"
                                    android:textColor="@color/colorfont" />

                                <TextView
                                    android:id="@+id/txnmaklinik"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/bariol_bold"
                                    android:text="Omega Tiga"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="5dp"
                                android:translationY="80dp"
                                android:fontFamily="@font/bariol_bold"
                                android:gravity="center"
                                android:text="Cek MR"
                                android:textColor="@color/colorfont"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="75dp"
                                android:translationY="80dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginVertical="5dp"
                                android:src="@drawable/row" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>