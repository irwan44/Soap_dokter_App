<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="3"
                        android:rowCount="7">

                        <!--        ROW 1 UMUR-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_columnWeight="0.5"
                            android:fontFamily="@font/bariol_bold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Tanggal Periksa"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:paddingStart="9dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="9dp"
                            android:paddingBottom="5dp"
                            android:text=":"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="202dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_columnWeight="0.5"
                            android:fontFamily="@font/bariol_bold"
                            android:padding="5dp"
                            android:text="03-01-2023 11:40"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <!--        ROW 2 GOL. DARAH-->

                        <!--        ROW 3 Jenis Kelamin-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:layout_columnWeight="0.5"
                            android:fontFamily="@font/bariol_bold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="ICD-10"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:paddingStart="9dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="9dp"
                            android:paddingBottom="5dp"
                            android:text=":"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:layout_columnWeight="0.5"
                            android:fontFamily="@font/bariol_bold"
                            android:padding="5dp"
                            android:text="....."
                            android:textSize="12dp"
                            android:textStyle="bold" />



                        <!--        ROW 4 ALERGI-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_columnWeight="0.5"
                            android:fontFamily="@font/bariol_bold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Tindakan"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:paddingStart="9dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="9dp"
                            android:paddingBottom="5dp"
                            android:text=":"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:layout_columnWeight="0.5"
                            android:fontFamily="@font/bariol_bold"
                            android:padding="5dp"
                            android:text="suntik KB"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <!--        ROW 5 No. HP-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:layout_columnWeight="0.5"
                            android:fontFamily="@font/bariol_bold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Nama Dokter"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:paddingStart="9dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="9dp"
                            android:paddingBottom="5dp"
                            android:text=":"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:layout_columnWeight="0.5"
                            android:fontFamily="@font/bariol_bold"
                            android:padding="5dp"
                            android:text="dr. Riezky Yudha Dewanti"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bariol_bold"
                        android:textColor="@color/colorfont"
                        android:text="Resep"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bariol_bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:text="1."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Cardio Aspirin"
                        android:textStyle="bold"
                        android:fontFamily="@font/bariol_bold"
                        android:textSize="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Obat Sroke"
                        android:textStyle="bold"
                        android:textColor="#61B5EA"
                        android:layout_marginHorizontal="48dp"
                        android:fontFamily="@font/bariol_bold"/>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_marginHorizontal="98dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="500mg"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:textColor="#4BABE7"
                            android:fontFamily="@font/bariol_bold"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Aturan Pakai :"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#797979"
                            android:textSize="10dp"
                            android:fontFamily="@font/bariol_bold"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="1 x 1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/bariol_bold"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#797979"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="Keterangan :"
                            android:textColor="#797979"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:fontFamily="@font/bariol_bold"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Sesudah Makan"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/bariol_bold"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#797979"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Jumlah :"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="#797979"
                            android:gravity="center"
                            android:fontFamily="@font/bariol_bold"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Sesudah Makan"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/bariol_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catatan :"
                        android:fontFamily="@font/bariol_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textStyle="italic"
                        android:text="Diminum Sebelum Malam Hari"
                        android:fontFamily="@font/bariol_regular"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_gravity="right"/>
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
